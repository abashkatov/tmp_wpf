<Window x:Class="WpfApp2.UserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="UserWindow" Height="450" Width="800">
    <Grid >
        <TextBox 
            Text="{Binding User.Name}"
            HorizontalAlignment="Left" Height="23" Margin="72,103,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox 
            Text="{Binding User.Age}"
            HorizontalAlignment="Left" Height="23" Margin="302,103,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button Content="Button" HorizontalAlignment="Left" Margin="465,284,0,0" VerticalAlignment="Top" Width="75"/>

    </Grid>
</Window>
